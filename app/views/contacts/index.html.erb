<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :first_name_cont %>
  <%= f.search_field :first_name_cont %>
  
  <%= f.label :middle_name_cont %>
  <%= f.search_field :middle_name_cont %>
  
  <%= f.label :last_name_cont %>
  <%= f.search_field :last_name_cont %>
  
  <%= f.label :phone_cont %>
  <%= f.search_field :phone_cont %>
  
  <%= f.label :email_cont %>
  <%= f.search_field :email_cont %>
  
  <%= f.label :contact_type_cont %>
  <%= f.search_field :contact_type_cont %>
  
  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= link_to "Address", update_contact_order_path(:address_id) %></th>
      <th><%= link_to "First Name", update_contact_order_path(:first_name) %></th>
      <th><%= link_to "Middle Name", update_contact_order_path(:middle_name) %></th>
      <th><%= link_to "Last Name", update_contact_order_path(:last_name) %></th>
      <th><%= link_to "Phone", update_contact_order_path(:phone) %></th>
      <th><%= link_to "Phone Ext", update_contact_order_path(:phone_ext) %></th>
      <th><%= link_to "Alt Phone", update_contact_order_path(:alt_phone) %></th>
      <th><%= link_to "Alt Phone Ext", update_contact_order_path(:alt_ext) %></th>
      <th><%= link_to "Fax", update_contact_order_path(:fax) %></th>
      <th><%= link_to "Email", update_contact_order_path(:email) %></th>
      <th><%= link_to "Contact Type", update_contact_order_path(:contact_type) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= link_to Address.where(["address_id = ?", contact.address_id]).first.line_1, Address.where(["address_id = ?", contact.address_id]).first %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.middle_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.phone_ext %></td>
        <td><%= contact.alt_phone %></td>
        <td><%= contact.alt_ext %></td>
        <td><%= contact.fax %></td>
        <td><%= contact.email %></td>
        <td><%= contact.contact_type %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

