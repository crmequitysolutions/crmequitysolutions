<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Address</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Phone ext</th>
      <th>Alt phone</th>
      <th>Alt ext</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Contact type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.contact_id %></td>
        <td><%= contact.address_id %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.middle_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.phone_ext %></td>
        <td><%= contact.alt_phone %></td>
        <td><%= contact.alt_ext %></td>
        <td><%= contact.fax %></td>
        <td><%= contact.email %></td>
        <td><%= contact.contact_type %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

