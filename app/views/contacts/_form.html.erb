<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :contact_id %>
    <%= form.number_field :contact_id, id: :contact_contact_id %>
  </div>

  <div class="field">
    <%= form.label :address_id %>
    <%= form.select(:address_id) do %>
      <% Address.all.each do |c| -%>
        <%= content_tag(:option, c.line_1, value: c.address_id) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, id: :contact_first_name %>
  </div>

  <div class="field">
    <%= form.label :middle_name %>
    <%= form.text_field :middle_name, id: :contact_middle_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, id: :contact_last_name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :contact_phone %>
  </div>

  <div class="field">
    <%= form.label :phone_ext %>
    <%= form.number_field :phone_ext, id: :contact_phone_ext %>
  </div>

  <div class="field">
    <%= form.label :alt_phone %>
    <%= form.text_field :alt_phone, id: :contact_alt_phone %>
  </div>

  <div class="field">
    <%= form.label :alt_ext %>
    <%= form.number_field :alt_ext, id: :contact_alt_ext %>
  </div>

  <div class="field">
    <%= form.label :fax %>
    <%= form.number_field :fax, id: :contact_fax %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :contact_email %>
  </div>

  <div class="field">
    <%= form.label :contact_type %>
    <%= form.text_field :contact_type, id: :contact_contact_type %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
