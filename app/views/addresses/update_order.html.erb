<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Line 1", update_address_order_path(:line_1) %></th>
      <th><%= link_to "Line 2", update_address_order_path(:line_2) %></th>
      <th><%= link_to "City", update_address_order_path(:city) %></th>
      <th><%= link_to "State", update_address_order_path(:state) %></th>
      <th><%= link_to "Zip Code", update_address_order_path(:zip_code) %></th>
      <th><%= link_to "County", update_address_order_path(:county) %></th>
      <th><%= link_to "Country", update_address_order_path(:country) %></th>
      <th><%= link_to "Community", update_address_order_path(:community_id) %></th>
      <th><%= link_to "School District", update_address_order_path(:school_district) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.line_1 %></td>
        <td><%= address.line_2 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.zip_code %></td>
        <td><%= address.county %></td>
        <td><%= address.country %></td>
        <td><%= link_to Community.where(["community_id = ?", address.community_id]).first.community_name, Community.where(["community_id = ?", address.community_id]).first %></td>
        <td><%= address.school_district %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
