<%= form_with(model: address, local: true) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :line_1 %><font color='#ff0000'>*</font>
    <%= form.text_field :line_1, id: :address_line_1 %>
  </div>

  <div class="field">
    <%= form.label :line_2 %>
    <%= form.text_field :line_2, id: :address_line_2 %>
  </div>

  <div class="field">
    <%= form.label :city %><font color='#ff0000'>*</font>
    <%= form.text_field :city, id: :address_city %>
  </div>

  <div class="field">
    <%= form.label :state %><font color='#ff0000'>*</font>
    <%= form.text_field :state, id: :address_state %>
  </div>

  <div class="field">
    <%= form.label :zip_code %><font color='#ff0000'>*</font>
    <%= form.text_field :zip_code, id: :address_zip_code %>
  </div>

  <div class="field">
    <%= form.label :county %><font color='#ff0000'>*</font>
    <%= form.text_field :county, id: :address_county %>
  </div>

  <div class="field">
    <%= form.label :country %><font color='#ff0000'>*</font>
    <%= form.text_field :country, id: :address_country %>
  </div>

  <div class="field">
    <%= form.label :community_id %>
    <%= form.select(:community_id) do %>
      <% Community.where(["user_email = ?", current_user.email]).each do |c| -%>
        <%= content_tag(:option, c.community_name, value: c.community_id) %>
      <% end %>
      <option value=-1>No Community</option>
    <% end %>
    <%= link_to 'New Community', new_community_path %>
  </div>

  <div class="field">
    <%= form.label :school_district %><font color='#ff0000'>*</font>
    <%= form.text_field :school_district, id: :address_school_district %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
