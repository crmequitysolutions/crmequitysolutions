<p id="notice"><%= notice %></p>

<h1>Transactions</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to "Purchased By", update_transaction_order_path(:purchased_by) %></th>
      <th><%= link_to "Date", update_transaction_order_path(:date) %></th>
      <th><%= link_to "Property", update_transaction_order_path(:property_id) %></th>
      <th><%= link_to "Price", update_transaction_order_path(:price) %></th>
      <th><%= link_to "Transaction Type", update_transaction_order_path(:transaction_type) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= link_to Contact.where(["contact_id = ?", transaction.purchased_by]).first.last_name, Contact.where(["contact_id = ?", transaction.purchased_by]).first %></td>
        <td><%= transaction.date %></td>
        <td><%= link_to Address.where(["address_id = ?", Property.where(["property_id = ?", transaction.property_id]).first.address_id]).first.line_1, Property.where(["property_id = ?", transaction.property_id]).first %></td>
        <td><%= transaction.price %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= link_to 'Show', transaction %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

