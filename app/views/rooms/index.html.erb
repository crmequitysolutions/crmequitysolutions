<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Property</th>
      <th>Room type</th>
      <th>Sqft</th>
      <th>Windows</th>
      <th>Closets</th>
      <th>Outlets</th>
      <th>Wall type</th>
      <th>Flooring type</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_id %></td>
        <td><%= link_to Address.where(["address_id = ?", Property.where(["property_id = ?", room.property_id]).first.address_id]).first.line_1, Property.where(["property_id = ?", room.property_id]).first %></td>
        <td><%= room.room_type %></td>
        <td><%= room.sqft %></td>
        <td><%= room.windows %></td>
        <td><%= room.closets %></td>
        <td><%= room.outlets %></td>
        <td><%= room.wall_type %></td>
        <td><%= room.flooring_type %></td>
        <td><%= room.notes %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_room_path %>
