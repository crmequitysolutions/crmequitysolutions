<p id="notice"><%= notice %></p>

<h1>Business Cards</h1>

<table>
  <thead>
    <tr>
      <th>Contact</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @business_cards.each do |business_card| %>
      <tr>
        <td><%= link_to Contact.where(["contact_id = ?", business_card.contact_id]).first.last_name, Contact.where(["contact_id = ?", business_card.contact_id]).first %></td>
        <td><%= image_tag business_card.image.thumb.url %></td>
        <td><%= link_to 'Show', business_card %></td>
        <td><%= link_to 'Edit', edit_business_card_path(business_card) %></td>
        <td><%= link_to 'Destroy', business_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div  class='btn btn-outline-warning' data_target='<%= new_business_card_path %>'> 'New Business Card'</div>
