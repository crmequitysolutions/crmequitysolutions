<%= form_with(model: interaction, local: true) do |form| %>
  <% if interaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(interaction.errors.count, "error") %> prohibited this interaction from being saved:</h2>

      <ul>
      <% interaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :interaction_id %>
    <%= form.number_field :interaction_id, id: :interaction_interaction_id %>
  </div>

  <div class="field">
    <%= form.label :contact_id %>
    <%= form.select(:contact_id) do %>
      <% Contact.all.each do |c| -%>
        <%= content_tag(:option, c.last_name, value: c.contact_id) %>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :date_time %>
    <%= form.datetime_select :date_time, id: :interaction_date_time %>
  </div>

  <div class="field">
    <%= form.label :interaction_type %>
    <%= form.text_field :interaction_type, id: :interaction_type %>
  </div>

  <div class="field">
    <%= form.label :result %>
    <%= form.text_field :result, id: :interaction_result %>
  </div>

  <div class="field">
    <%= form.label :note %>
    <%= form.text_area :note, id: :interaction_note %>
  </div>

  <div class="field">
    <%= form.label :property_id %>
    <%= form.select(:property_id) do %>
      <% Property.all.each do |c| -%>
        <%= content_tag(:option, Address.where(["address_id = ?", c.address_id]).first.line_1, value: c.property_id) %>
      <% end %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
