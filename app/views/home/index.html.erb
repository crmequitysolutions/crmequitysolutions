    <%= javascript_tag do %>
      var contacts = <%= @contacts.to_json.html_safe %>;
      console.log(contacts);
      $(document).on("click", ".contact-entry", function (e) {
        e.preventDefault();
        console.log('contact entry clicked');
        var id = $(this).data('id');
        var table_body = $(".modal-body #tableBody");
        var target = undefined
        
        for (var i = 0; i < contacts.length; i++){
          if (contacts[i].contact_id == id){
            target = contacts[i]
          }
        }
        
        for (var k in target){
          if (target.hasOwnProperty(k)) {
           table_body.append('<tr align="center"><td>' + k + '</td>' +'<td>'+ target[k] +'</td>'+'</tr>')
          }
        }
        
      });
      
      $(document).ready(function(){
        $("#contactsModal").on("hidden.bs.modal", function () {
          console.log('contacts modal is hidden')
          var node = $(".modal-body #tableBody")[0]; //TODO add check
          while (node.hasChildNodes()) {
            node.removeChild(node.lastChild);
          }
        });
      });
      
    <% end %>
    
    <!-- Script for loading html into hrefModal -->
    <script>
      
      $(document).ready(function(){
        
        $('#hrefModal').on('show.bs.modal', function (e) {
          e.stopPropagation();
          var href = $(e.relatedTarget).data('id');
          console.log('modal show:', 'href=', href);
          $('#hrefModalContent').load(href + ' #BODY_CONTENT', function(){
            console.log('href successfully loaded')
          });
        });
        
        $('#hrefModal').on('hidden.bs.modal', function (e) {
          console.log('hrefModal hidden');
        });
        
      });
    </script>
    
